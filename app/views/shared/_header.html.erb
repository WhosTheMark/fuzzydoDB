<header class="header-fixed">
  <div class="header-x-scroll">
    <div class="container-fluid header-container">

      <div class="row">
        <div class="col-xs-2 logo">
          <%= image_tag("fuzzydodb.png", width: "190px", height: "50px") %>
        </div>
        <div class="col-xs-10 header-right-container">
          <div class="top-options-container">
            <button type="button" class="btn btn-default"> Iniciar Sesión </button>
            <div class="input-group">
              <input type="text" name="search" class="form-control" placeholder="Buscar">
              <span class="input-group-btn">
                <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"/></button>
              </span>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="header-menu" ng-controller="HeaderController">
      <ul class="home-menu-bar w3-light-grey">
      <% menu_tags = ["INICIO","EQUIPO","DESCARGA","API","DOCUMENTACIÓN","PRUEBAS EN LÍNEA", "DESEMPEÑO","COMUNIDAD","IDIOMA"] -%>
      <% menu_controllers = ["home","about","home","home","home","home","home","home","home"] -%>

      <% menu_tags.each_with_index do |tag, i| -%>

        <% if menu_tags.size - 1 != i then %>
        <li class="w3-hover-teal" >
          <%= link_to(tag, controller: menu_controllers[i]) %>
        </li>

        <% else %>
        <li class="w3-hover-teal w3-right">
          <a>
            <span class="glyphicon glyphicon-globe language-icon"></span>
            <%= tag -%>
          </a>
        </li>
        <% end -%>

      <% end -%>

      </ul>
    </div>
</header>
