<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t("activerecord.attributes.user.email") %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t("activerecord.attributes.user.password") %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t("activerecord.attributes.user.remember_me") %>
    </div>
  <% end -%>

  <% @modalAction = "login" %>
  <%= render 'devise/shared/links', :locals => { :modalAction => @modalAction } %>

  <div class="modal-footer">
    <div class="btn btn-default" data-dismiss="modal"> <%= t("labels.cancel") %> </div>
    <%= f.submit "Log in", :class => "btn btn-default" %>
  </div>
<% end %>
