<div class="content-wrapper">

  <%= render :partial => "user_sidebar",
        locals: { active_item: @active_item} %>

  <div class="content-right">
    <h1><%= t("user-profile.edit.title") %></h1>
    <div class="member-card">
      <%= form_for(@user) do |f| %>
        <%= devise_error_messages! %>
        <div><%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, value: @user.name %></div>
        <div class="actions"><%= f.submit "update" %></div>
      <% end %>
    </div>
  </div>
</div>
