<% @sidebar_bar_items = ["show"] %>
<% @sidebar_bar_items = @sidebar_bar_items + ["edit", "edit_photo", "update_password"] if @user == current_user %>
<% @token_sidebar_namespace = "user-profile.menu." %>
<% @links = [ url_for(controller: controller_name, action: "show") ]%>
<% @links = @links + [url_for(controller: controller_name, action: "edit"),
                      url_for(controller: controller_name, action: "edit_profile_photo"),
                      url_for(controller: controller_name, action: "edit_password")] if @user == current_user %>

<%= render :partial => "shared/sidebar",
    locals: { sidebar_bar_items: @sidebar_bar_items,
              active_item: active_item,
              token_sidebar_namespace: @token_sidebar_namespace,
              links: @links } %>

